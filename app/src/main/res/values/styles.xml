<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
       
    </style>


    <style name="AllCustomTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/AllMyActionBar</item>
        <item name="actionBarStyle">@style/AllMyActionBar</item>
    </style>
    <style name="AllMyActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/blue</item>
        <item name="background">@color/blue</item>

    </style>



    <style name="CustomTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>
    <style name="MyActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/green</item>
        <item name="background">@color/green</item>

    </style>

</resources>

